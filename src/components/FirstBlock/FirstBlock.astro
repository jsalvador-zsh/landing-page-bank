---
import BackgroundRadialRight from "@components/BackgroundRadial/BackgroundRadialRight.astro";
import MotionTransition from "@components/MotionTransition/MotionTransition";
import { Image } from "astro:assets";
import CardsBlock from "@assets/cards-block.png"
import { Reveal } from "@components/Reveal/Reveal";
---

<div class="relative p-4 md:py-40">
    <BackgroundRadialRight />
    <div class="grid max-w-5xl mx-auto md:grid-cols-2">
        <div>
            <Reveal client:visible>
                <h1 class="text-5xl font-semibold">
                    El nuevo <span
                        class="block degradedBlue bg-gradient-to-r from-sky-300 to-sky-600"
                        >banco digital</span
                    >para todos
                </h1>
            </Reveal>
            <Reveal client:visible>
                <p class="max-w-md mt-10">
                    Nuestro equipo de expertos utiliza una metodología para
                    identificar las tarjeta de crédito que probablemente se ajusten
                    a sus necesidades. Examinamos tasas porcentuales anuales,
                    tarifas anuales.
                </p>
            </Reveal>
            <Reveal client:visible>
                <div class="my-8">
                    <a
                        href="#clients"
                        class="px-4 py-3 rounded-md bg-gradient-to-r from-sky-300 to-sky-600"
                        >Empieza ahora</a
                    >
                </div>
            </Reveal>
        </div>
        <MotionTransition client:visible className="flex items-center justify-center">
            <Image src={CardsBlock} alt="Cards" width={450} height={450} class="h-auto w-72 md:w-full"/>
        </MotionTransition>
    </div>
</div>
